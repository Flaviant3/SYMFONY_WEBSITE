{# templates/categorie/liste.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block content %}
    <h1>Liste des Catégories</h1>

    {% if categories is not empty %}
        <ul>
            {% for categorie in categories %}
                <li>
                    {{ categorie.titre }}

                    {# Lien d'édition vers la route 'categorie_edition' avec l'id de la catégorie #}
                    <a href="{{ path('categorie_edition', {'id': categorie.id}) }}">Éditer</a>

                    {# Lien de suppression vers la route 'categorie_suppression' avec l'id de la catégorie #}
                    <a href="{{ path('categorie_suppression', {'id': categorie.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune catégorie n'est actuellement disponible.</p>
    {% endif %}
{% endblock %}
