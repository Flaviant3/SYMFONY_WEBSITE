{# templates/recherche/resultat.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Résultats de la Recherche{% endblock %}

{% block content %}
    <style>
        /* public/css/resultat.css */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            color: #343a40;
        }

        .search-results {
            max-width: 800px;
            margin: 0 auto;
        }

        header {
            background-color: #007bff;
            padding: 20px;
            text-align: center;
            color: #fff;
            margin-bottom: 30px;
        }

        h1, h2 {
            color: black;
        }

        .article-list {
            display: grid;
            gap: 20px;
        }

        .article-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .article-card h2 {
            margin-bottom: 10px;
        }

        .article-card .meta {
            color: #6c757d;
            font-size: 0.8rem;
        }

        .article-card .content {
            padding: 15px;
        }

        .no-results {
            text-align: center;
            color: #6c757d;
            font-style: italic;
        }
    </style>

    <header>
        <h1>Résultats de la Recherche</h1>
    </header>

    {% if searchTerm is defined %}
        <p>Vous avez recherché : {{ searchTerm }}</p>
    {% else %}
        <p>Aucun terme de recherche spécifié.</p>
    {% endif %}

    {% if articles %}
        <h2>Articles trouvés :</h2>
        <ul>
            {% for article in articles %}
                <li>
                    <strong>{{ article.titre }}</strong><br>
                    <em>Auteur: {{ article.auteur }}</em><br>
                    <em>Date de Publication: {{ article.datePublication|date('Y-m-d H:i:s') }}</em><br>
                    <p>{{ article.texte }}</p>
                    {% if article.image %}
                        <img src="{{ article.image }}" alt="Image de l'article">
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun article trouvé.</p>
    {% endif %}
{% endblock %}
